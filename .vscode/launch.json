{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "client.py",
            "env": {
                "PYTHONPATH": "${workspaceFolder}", 
                "VIRTUAL_ENV": "${workspaceFolder}/.venv"
            },
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        }
    ]
}